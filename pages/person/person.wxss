/* pages/person/person.wxss */
.content view {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #fafafa;
}




.userinfo-avatar {
  width: 68rpx;
  height: 68rpx;
  margin: 0;
}

.content view input, .picker{
  text-align: right;
} 

.phone {
  background: transparent;
  margin-right: 0;
  font-size: 24rpx;
  color: #333;
  padding-right: 0;
}

.phone::after {
  border: none;
}
