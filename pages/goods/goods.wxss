/* pages/goods/goods.wxss */

.title-num {
  font-size: 30rpx;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.title-num .title {
  width: 70%;
}

.columName {
  font-size: 36rpx;
  margin: 50rpx 0;
}
.address{
  align-items: flex-start;
}
.address text:nth-child(3) {
  flex: 1;
  color: #666;
  margin-left: 20rpx;
}

.desc {
  color: #666;
  line-height: 40rpx;
  margin-bottom: 100rpx;
}

.icon {
  width: 38rpx;
  height: 38rpx;
  vertical-align: bottom;
}

.btn-ok {
  position: fixed;
  bottom: 0;
  height: 80rpx;
  line-height: 80rpx;
}

 .picbox{
  width: 100%;
  height: 750rpx;
  overflow: hidden;
}