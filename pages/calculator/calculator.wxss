/* pages/calculator/calculator.wxss */
.head{
  justify-content: space-around;
  height: 60rpx;
  align-items: center;
  border:1px solid #bd9e7f;
  border-radius: 10px;
  overflow: hidden;
}
.head view{
  width: 33%;
  display: flex;
  justify-content: space-around;
  height: 60rpx;
  align-items: center;
}
.on{
  background:#bd9e7f;

}
.monthMoney{
  justify-content: center;
  align-items: center;
  height: 100rpx;
  margin-top: 20rpx;
}
.monthMoney text{
  margin-top: 20rpx;
}

.content  view{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  border-bottom: 1px solid #ccc;
  align-items: center;
  justify-content: space-between;
}

radio-group{
  display: flex;
  align-items: center;
}
 radio-group .radio{
  margin-left: 10rpx;
}
 radio-group radio{
  margin-left: 10rpx;
}
.money{
  color: red;
  font-weight: bold;
  
}
